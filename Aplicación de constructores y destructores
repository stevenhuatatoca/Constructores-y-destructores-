# main.py

class Recurso:
    def __init__(self, nombre):
        """
        Constructor de la clase Recurso.
        Se llama autom치ticamente al crear una instancia de la clase.
        
        :param nombre: Nombre del recurso.
        """
        self.nombre = nombre
        print(f"Recurso '{self.nombre}' inicializado.")

    def __del__(self):
        """
        Destructor de la clase Recurso.
        Se llama autom치ticamente cuando la instancia es eliminada o el programa termina.
        """
        print(f"Recurso '{self.nombre}' destruido.")

# Creaci칩n de una instancia de Recurso
recurso = Recurso("Base de Datos")

# Al finalizar el programa o eliminar el objeto, se llamar치 al destructor
del recurso
